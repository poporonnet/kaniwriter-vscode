{
  "name": "kaniwriter-vscode",
  "displayName": "kaniwriter",
  "publisher": "tufusa",
  "description": "Open kaniwriter from VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poporonnet/kaniwriter-vscode.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaniwriter-vscode.open-kaniwriter",
        "title": "Open kaniwriter",
        "icon": "$(play-circle)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kaniwriter-vscode.open-kaniwriter",
          "group": "navigation",
          "when": "editorLangId == ruby"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run check",
    "check": "biome check --write",
    "test": "vscode-test",
    "package": "vsce package",
    "check:ci": "biome ci && tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/mocha": "10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "1.106.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.7.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
