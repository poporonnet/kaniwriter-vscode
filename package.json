{
  "name": "kaniwriter-vscode",
  "displayName": "kaniwriter",
  "publisher": "tufusa",
  "description": "Open kaniwriter from VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": ["Other"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poporonnet/kaniwriter-vscode.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaniwriter-vscode.open-kaniwriter",
        "title": "Open kaniwriter",
        "icon": "$(play-circle)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kaniwriter-vscode.open-kaniwriter",
          "group": "navigation",
          "when": "editorLangId == ruby"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run check",
    "check": "biome check --write",
    "test": "vscode-test",
    "package": "vsce package",
    "check:ci": "biome ci && tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mocha": "10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "1.106.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.4.1",
    "@vscode/vsce": "3.2.1",
    "typescript": "5.7.2"
  }
}
