{
  "name": "kaniwriter-vscode",
  "displayName": "kaniwriter",
  "publisher": "poporonnet",
  "description": "Open kaniwriter from VSCode",
  "version": "0.3.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poporonnet/kaniwriter-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaniwriter-vscode.open-kaniwriter",
        "title": "Open kaniwriter",
        "icon": "$(play-circle)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kaniwriter-vscode.open-kaniwriter",
          "group": "navigation",
          "when": "editorLangId == ruby"
        }
      ]
    },
    "configuration": {
      "title": "kaniwriter",
      "properties": {
        "kaniwriter-vscode.compilerUrl": {
          "type": "string",
          "description": "URL for kanicc instance to use.",
          "default": "https://ceres.epi.it.matsue-ct.ac.jp/compile"
        },
        "kaniwriter-vscode.writerUrl": {
          "type": "string",
          "description": "URL for kaniwriter instance to use.",
          "default": "https://ceres.epi.it.matsue-ct.ac.jp/writer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run check",
    "check": "biome check --write",
    "test": "vscode-test",
    "package": "vsce package",
    "check:ci": "biome ci && tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@types/mocha": "10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "1.107.0",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.7.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
