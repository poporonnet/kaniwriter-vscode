{
  "name": "kaniwriter-vscode",
  "displayName": "kaniwriter",
  "publisher": "poporonnet",
  "description": "Open kaniwriter from VSCode",
  "version": "0.3.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poporonnet/kaniwriter-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaniwriter-vscode.open-kaniwriter",
        "title": "Open kaniwriter",
        "icon": "$(play-circle)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kaniwriter-vscode.open-kaniwriter",
          "group": "navigation",
          "when": "editorLangId == ruby"
        }
      ]
    },
    "configuration": {
      "title": "kaniwriter",
      "properties": {
        "kaniwriter-vscode.compilerUrl": {
          "type": "string",
          "description": "URL for kanicc instance to use.",
          "default": "https://ceres.epi.it.matsue-ct.ac.jp/compile"
        },
        "kaniwriter-vscode.writerUrl": {
          "type": "string",
          "description": "URL for kaniwriter instance to use.",
          "default": "https://ceres.epi.it.matsue-ct.ac.jp/writer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run check",
    "check": "biome check --write",
    "test": "vscode-test",
    "package": "vsce package",
    "check:ci": "biome ci && tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/mocha": "10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "1.108.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.7.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316"
}
