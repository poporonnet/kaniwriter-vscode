{
  "name": "kaniwriter-vscode",
  "displayName": "kaniwriter",
  "publisher": "tufusa",
  "description": "Open kaniwriter from VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poporonnet/kaniwriter-vscode.git"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaniwriter-vscode.open-kaniwriter",
        "title": "Open kaniwriter",
        "icon": "$(play-circle)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kaniwriter-vscode.open-kaniwriter",
          "group": "navigation",
          "when": "editorLangId == ruby"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run check",
    "check": "biome check --write",
    "test": "vscode-test",
    "package": "vsce package",
    "check:ci": "biome ci && tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/mocha": "10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "1.106.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "@vscode/vsce": "3.7.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
